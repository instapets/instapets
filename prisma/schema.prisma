// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model User {
    id         String       @id
    email      String       @unique
    name       String?
    password   String
    Newsletter Newsletter[]
}

model Newsletter {
    id     Int     @id @default(autoincrement())
    email  String  @unique
    active Boolean @default(false)
    code   String? @unique
    userId String?
    user   User?   @relation(fields: [userId], references: [id])
}

model Calendar {
    id        Int      @id @default(autoincrement())
    name      String
    desc      String
    dateRange Boolean  @default(false)
    dateStart DateTime
    dateEnd   DateTime
    place     String
}

model Ratings {
    id     Int     @id @default(autoincrement())
    postId Int
    userId String? @unique
    like   Int
    unlike Int
}

model Animal {
  id       String   @id @default(autoincrement())
  owner    String
  name     String
  sex      String
  species  String
  weight   Float
  height   Float
  age      Int
  color    String
  desc     String?
  image    String?
  createdAt DateTime @default(now())
}